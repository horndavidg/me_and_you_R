<div class="container edit_user_form">
     <h2 class="text-center font_lg"><u>Edit your information:</u></h2><br>
      <%= form_for @user, url: user_path(@user) do |f| %>
        <%= render partial: "shared/errors", locals:{instance: @user} %>
        <div class="form-group">
          <%= f.label :name, class:"control-label" %>
          <%= f.text_field :name, class:"form-control" %>
        </div>
           <div class="form-group">
          <%= f.label :email, class:"control-label" %>
          <%= f.email_field :email, class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :picture, class:"control-label" %>
          <%= f.url_field :picture, class:"form-control", placeholder:"URL Please (optional)" %>
        </div>

        <%= f.submit "Update My Account", id:"submit-user", class:"btn btn-block btn-success text-center" %>
      <% end %>
   <br>
   <%= link_to "Reset My Password", new_reset_path, class:"btn btn-block btn-info" %>
   <br>
   <%= link_to "Delete My Account", user_path(@user.id), method: :delete, class:"btn btn-block btn-danger", data: {confirm: "Are you sure? This will delete all of your information and that shared with your match"} %>
</div>
