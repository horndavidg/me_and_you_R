<div class="container edit_user_form margin_top">

     <h2 class="text-center font_lg"><u>Edit your information:</u></h2><br>

      <%= render partial: "shared/errors", locals:{instance: @user} %>
      
      <%= form_for @user, url: user_path(@user) do |f| %>
       
        <div class="form-group">
          <%= f.label :name, class:"control-label" %>
          <%= f.text_field :name, class:"form-control" %>
          <p class="help-block">* If you are going to use Facebook login please make sure your name matches what is shown in Facebook.</p>
        </div>
           <div class="form-group">
          <%= f.label :email, class:"control-label" %>
          <%= f.email_field :email, class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :picture, class:"control-label pad-sm-r" %>

        <!-- Add user options for uploading / editing pictures to Uploadcare here -->

          <%= f.uploadcare_field :picture, class:"form-control", :data => {:crop => '100x100', :"images-only" => 'true'} %>

          <p class="help-block">* Pictures can ONLY be uploaded or edited via Uploadcare, if you haven’t uploaded an image yet click “Choose an image”, otherwise click the image link or “Choose an image” to update your current picture.</p>

        </div>

        <%= f.submit "Update My Account", id:"submit-user", class:"btn btn-block btn-success text-center" %>
      <% end %>
   <br>
   <%= link_to "Reset My Password", new_reset_path, class:"btn btn-block btn-info" %>
  
   
   <% if @user.match_id != nil %>
   <br>
   <%= link_to "Remove My Match", remove_match_path(@user.id), method: :delete, class:"btn btn-block btn-warning", data: {confirm: "Are you sure? This will delete all of your shared information with your match!"} %>

    <% end %>

   <br>
   <%= link_to "Delete My Account", user_path(@user.id), method: :delete, class:"btn btn-block btn-danger", data: {confirm: "Are you sure? This will delete all of your information and that shared with your match!"} %>
</div>
