<!DOCTYPE html>
<html>
<head>
  <title>Me&You</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

<%= render partial: 'shared/theme_header' %>

</head>
<body class="<%= @landing_page ? 'flower' : ''%>">


<!-- Custom Navbar -->

 <nav id="mainNav" class="navcolor navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
         <a class="navbar-brand" href="#">
        <%= image_tag("me&you_squarelogo.png", :alt => "Me & You", class:"nav-logo") %>
      </a>
      </div>

      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
        
        <% if @current_user %>

        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="fa fa-th-large box-icon"></i></a>
          <ul class="dropdown-menu">
            <li><%= link_to "My Page", user_path(@current_user) %></li>
            <li><%= link_to "Edit My Account", edit_user_path(@current_user) %></li>
            <li><%= link_to "Our Page", kudos_path %></li>
            <li><%= link_to "Give A Kudo", new_kudo_path %></li>
            <li><%= link_to "Add Coupon", new_coupon_path %></li>
          </ul>
        </li>

          <% end %>   
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <% if @current_user %>
             
               <% if @current_user.picture != ""%>
             
               <li class="navbar-text"><%= image_tag("#{current_user.picture}", class:"img-rounded avatar") %></li>

                <% end %>

            <li><p class="navbar-text"><span class="white">Signed in as </span>
            <%= link_to "#{@current_user.name}", user_path(@current_user), class:"red"%></p></li>
            <li><%= link_to "Log Out", logout_path, {method: :delete, :style => 'color: white'}%></li>
          <% else %>
            <li><%= link_to "Login Please", login_path, {:style => 'color: white'} %> </li>

           <!-- FB Login Button -->
           
            <li><%= link_to (image_tag"facebook-login-button-002.png", class:"fb-button"), "/auth/facebook", id: "sign_in", :style => 'color: white' %></li>

          <% end %>
        </ul>
      </div>
    </div>
  </nav>

<!--   End Navbar -->

<!--   Flash Message -->

   <% flash.each do |key, value| %>
      <% if key == "notice" %>
        <%= content_tag :div, value, class: "text-center alert alert-warning" %>
      <% elsif key == "alert" %>
        <%= content_tag :div, value, class: "text-center alert alert-danger" %>
      <% else %>
        <%= content_tag :div, value, class: "text-center alert alert-success" %>
      <% end %>
    <% end %>










<!-- Page Content -->

<%= yield %>


<!-- End Page Content -->

  <%= render partial: 'shared/footer' %>

  <%= render partial: 'shared/end_javascript' %>

</body>
</html>
