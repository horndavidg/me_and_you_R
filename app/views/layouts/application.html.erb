<!DOCTYPE html>
<html>
<head>
  <title>Me&You</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

<%= render partial: 'shared/theme_header' %>

</head>
<body>


<!-- Custom Navbar -->

 <nav id="mainNav" class="navcolor navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
       <%= link_to "Me & You", root_path, class:"navbar-brand link_color font_nav" %>
      </div>

      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">

          <% if @current_user == nil %>
              <li><%= link_to "No Current User!", login_path, {:style => 'color: white'} %></li>
          <% end %>   
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <% if @current_user %>
             
               <% if @current_user.picture != ""%>
             
               <li class="navbar-text"><%= image_tag("#{current_user.picture}", class: "img-rounded avatar") %></li>

                <% end %>

            <li><p class="navbar-text"><span class="white">Signed in as
            <%= link_to "#{@current_user.email}", user_path(@current_user), class:"red"%></li>
            <li><%= link_to "Log Out", logout_path, {method: :delete, :style => 'color: white'}%></li>
          <% else %>
            <li><%= link_to "Login Please", login_path, {:style => 'color: white'} %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>

<!--   End Navbar -->

<!--   Flash Message -->

   <% flash.each do |key, value| %>
      <% if key == "notice" %>
        <%= content_tag :div, value, class: "text-center alert alert-warning" %>
      <% elsif key == "alert" %>
        <%= content_tag :div, value, class: "text-center alert alert-danger" %>
      <% else %>
        <%= content_tag :div, value, class: "text-center alert alert-success" %>
      <% end %>
    <% end %>


<!-- Page Content -->

<%= yield %>


<!-- End Page Content -->

  <%= render partial: 'shared/footer' %>

  <%= render partial: 'shared/end_javascript' %>

</body>
</html>
