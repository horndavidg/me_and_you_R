<div class="col-sm-offset-3 auth_box">
  <div class="col-sm-7">
    <div class="well">
      <h2 class="font_lg text-center">Change Your Password</h2><br>
      <%= form_for :user, url:reset_path(@user.password_reset_token), method: :patch do |f|%>
        <div class="form-group">
          <%= f.label :passwrod, "New Password", class:"control-label" %>
          <%= f.password_field :password, autofocus: true, class:"form-control"%>
        </div>

        <%= f.submit "Reset Password", class:"btn btn-block btn-primary" %>
      <% end %>
  
    </div>
  </div>
</div>